<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- CheckBox -->
    <style name="FullCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/full_checkbox</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- Baby Rating Bar -->
    <style name="BabyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/baby_rating_layerlist</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <!-- Baby Rating Bar Big -->
    <style name="BabyRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/baby_rating_layerlist_big</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>


</resources>