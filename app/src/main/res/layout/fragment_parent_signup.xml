<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Login form -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/merge_signup" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="　　姓名："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/normal_text" />

            <EditText
                android:id="@+id/parents_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/full_edittext_selector"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="住家地址："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/normal_text" />

            <EditText
                android:id="@+id/parents_address"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/full_edittext_selector"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聯絡電話："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/normal_text" />

            <EditText
                android:id="@+id/parents_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/full_edittext_selector"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小孩生日：民國"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/normal_text" />

            <!--
                 <EditText
                android:id="@+id/kids_age_year"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/full_edittext_selector"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="4" />
            -->

            <Spinner
                android:id="@+id/kids_age_year"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <!--
                 <EditText
                android:id="@+id/kids_age_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/full_edittext_selector"
                android:maxLines="1"
                android:maxLength="2"
                android:singleLine="true" />
            -->

            <Spinner
                android:id="@+id/kids_age_month"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小孩姓別："
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/normal_text" />

            <CheckBox
                android:id="@+id/kids_gender_boy"
                style="@style/FullCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男" />

            <CheckBox
                android:id="@+id/kids_gender_girl"
                style="@style/FullCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女" />
        </LinearLayout>

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/full_button_selector"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/sign_up"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>